@using Capstone.Web.Models
@model List<Park>


<div id="parks-list" class="body-content">
    <div class="text-center"><h2 class="green-text-header">List of National Parks</h2></div>
    @foreach (Park p in Model)
    {
        <div class="row park-list-view">
            <div class="col-md-6">
                <img src="~/Content/@(p.Code.ToLower() + ".jpg")" class="img-responsive" />
            </div>
            <div class="col-md-6">
                <h3>@p.Name</h3>
                <div class="state">@p.State</div>
                <div class="description">@p.Description</div>
                <a class="btn btn-lg btn-bg" href="@Url.Action("Detail","Home", new { parkCode = p.Code }, null)">View More Details</a>
            </div>
        </div>
    }
</div>
